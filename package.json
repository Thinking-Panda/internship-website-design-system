{
  "name": "internship-website-design-system",
  "version": "1.0.0",
  "description": "This design system is a project of _Hack for LA_. It helps teams customize and develop their websites and applications. This design system is meant to provide necessary web components and make them easy to customize.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "pa11y": "node scripts/pa11y-test.js",
    "build-css": "sass extra_sass/main.scss docs/components/sass/main.css",
    
    "sass:watch": "sass --watch extra_sass/main.scss:docs/components/sass/main.css",
  "mkdocs:serve": "mkdocs serve",
   "dev": "concurrently \"extra_sass/main.scss:docs/components/sass/main.css\" \"mkdocs serve --dev-addr=0.0.0.0:8000\""
  },
  "author": "hackforla",
  "license": "GPL-2.0",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "csv-writer": "^1.6.0",
    "husky": "^9.0.11",
    "pa11y": "^8.0.0",
    "sass": "^1.77.8"
  }
}